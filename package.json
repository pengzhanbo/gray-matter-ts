{
  "name": "gray-matter-ts",
  "type": "module",
  "version": "1.0.0-beta.1",
  "packageManager": "pnpm@10.23.0",
  "description": "Parse front-matter from a string or file. Fast, reliable and easy to use. Parses YAML front matter by default, but also has support for YAML, JSON, TOML or Coffee Front-Matter, with options to set custom delimiters.",
  "author": "pengzhanbo <q942450675@outlook.com> (https://github.com/pengzhanbo)",
  "license": "MIT",
  "keywords": [
    "assemble",
    "coffee",
    "coffee-script",
    "data",
    "docs",
    "documentation",
    "extract",
    "extracting",
    "front",
    "front-matter",
    "frontmatter",
    "generate",
    "generator",
    "gh-pages",
    "gray",
    "javascript",
    "jekyll",
    "js",
    "JSON",
    "markdown",
    "matter",
    "parse",
    "parser",
    "parsing",
    "site",
    "static",
    "template",
    "toml",
    "yaml",
    "yfm"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --dts",
    "lint": "eslint .",
    "test": "vitest --coverage",
    "prepare": "simple-git-hooks",
    "release": "pnpm lint && pnpm test --run && pnpm build && pnpm release:version && pnpm publish --access public",
    "release:changelog": "conventional-changelog -p angular",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog\" --commit \"build: publish v%s\" --all --push --tag"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@pengzhanbo/eslint-config": "^1.41.0",
    "@pengzhanbo/tsconfig": "^1.41.0",
    "@types/coffeescript": "^2.5.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.13",
    "ansis": "^4.2.0",
    "bumpp": "^10.3.1",
    "coffeescript": "^2.7.0",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-angular": "^8.1.0",
    "eslint": "^9.39.1",
    "gray-matter-ts": "file:dist",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "toml": "^3.0.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
